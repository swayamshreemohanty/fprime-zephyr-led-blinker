// Device tree overlay for Nucleo H7A3ZI-Q board
// Increases available SRAM for F' application

// Delete the default small sram0 and redefine with more memory
/delete-node/ &sram0;

/ {
    soc {
        // Combine sram0, sram1, sram2 into one contiguous 640KB region
        // This provides enough space for the F' application
        sram0: memory@24000000 {
            compatible = "zephyr,memory-region", "mmio-sram";
            reg = <0x24000000 DT_SIZE_K(640)>;
            zephyr,memory-region = "SRAM0";
        };
    };

    chosen {
        zephyr,sram = &sram0;
        // Use LPUART1 for F-Prime communication on PB6 (TX) and PB7 (RX)
        zephyr,console = &lpuart1;
        zephyr,shell-uart = &lpuart1;
    };

    aliases {
        led2 = &red_led;
    };

    leds {
        compatible = "gpio-leds";
        red_led: led_2 {
            gpios = <&gpiob 14 GPIO_ACTIVE_HIGH>;
            label = "User LD3";
        };
    };
};

// Enable LPUART1 for F-Prime communication on PB6 (TX) and PB7 (RX)
// These pins are free and accessible on CN10 connector
&lpuart1 {
    status = "okay";
    current-speed = <115200>;
};

// Disable USART3 so it doesn't output to ST-Link Virtual COM
&usart3 {
    status = "disabled";
};

// Disable USB OTG to prevent conflicts with UART communication
&usbotg_hs {
    status = "disabled";
};
